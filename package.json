{
    "name": "@doist/reactist",
    "description": "Open source React components by Doist",
    "author": "Henning Muszynski <henning@doist.com> (http://doist.com)",
    "version": "4.0.0",
    "license": "MIT",
    "homepage": "https://github.com/Doist/reactist#readme",
    "repository": "git+https://github.com/Doist/reactist.git",
    "main": "dist/index.js",
    "typings": "dist/index.d.ts",
    "files": [
        "dist",
        "src"
    ],
    "engines": {
        "node": ">=10"
    },
    "scripts": {
        "start": "tsdx watch",
        "build": "tsdx build",
        "build-types": "rm -f dist/**/*.d.ts lib/**/d.ts && npx tsc -p tsconfig.lib.json; npx tsc -p tsconfig.index.json; mv dist/index.d.ts dist/reactist.d.ts",
        "build-storybook": "build-storybook -o docs",
        "build-all": "npm run build && npm run build-storybook && npm run build-types",
        "test": "tsdx test --passWithNoTests",
        "lint": "tsdx lint src stories",
        "prepare": "tsdx build",
        "storybook": "start-storybook -p 6006",
        "prepare-release": "rm -rf node_modules package-lock && npm install && npm run lint && npm run test && npm run build-all",
        "prettify": "./node_modules/.bin/prettier --write \"./**/*.{js,jsx,ts,tsx,json,css,scss,less,md}\""
    },
    "peerDependencies": {
        "classnames": "^2.2.5",
        "dayjs": "^1.8.10",
        "react": "^15.5.4 || ^16.2.0",
        "react-dom": "^15.5.4 || ^16.2.0",
        "prop-types": "^15.6.2"
    },
    "module": "dist/test-tsdx.esm.js",
    "devDependencies": {
        "@babel/core": "^7.9.6",
        "@babel/plugin-proposal-class-properties": "^7.0.0",
        "@babel/plugin-proposal-export-default-from": "^7.0.0",
        "@babel/plugin-proposal-export-namespace-from": "^7.0.0",
        "@babel/plugin-transform-spread": "^7.0.0",
        "@babel/polyfill": "^7.0.0",
        "@babel/preset-env": "^7.0.0",
        "@babel/preset-react": "^7.0.0",
        "@babel/register": "^7.0.0",
        "@storybook/addon-actions": "^5.3.18",
        "@storybook/addon-docs": "^5.3.18",
        "@storybook/addon-info": "^5.3.18",
        "@storybook/addon-knobs": "^5.3.18",
        "@storybook/addon-links": "^5.3.18",
        "@storybook/addon-options": "^5.3.18",
        "@storybook/addons": "^5.3.18",
        "@storybook/react": "^5.3.18",
        "@types/cheerio": "^0.22.18",
        "@types/classnames": "^2.2.10",
        "@types/react": "^16.9.35",
        "@types/react-dom": "^16.9.8",
        "@typescript-eslint/eslint-plugin": "^2.34.0",
        "@typescript-eslint/parser": "^2.34.0",
        "autoprefixer": "^9.8.0",
        "babel-core": "^7.0.0-bridge.0",
        "babel-eslint": "^9.0.0",
        "babel-loader": "^8.1.0",
        "classnames": "^2.2.5",
        "css-loader": "^1.0.0",
        "cssnano": "^4.1.10",
        "dayjs": "^1.8.10",
        "enzyme": "^3.6.0",
        "enzyme-adapter-react-16": "^1.5.0",
        "enzyme-to-json": "^3.3.4",
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^6.10.1",
        "eslint-plugin-jest": "^21.22.0",
        "eslint-plugin-prettier": "^3.1.3",
        "eslint-plugin-react": "^7.19.0",
        "husky": "^4.2.5",
        "jest": "^24.7.1",
        "less": "^3.8.1",
        "less-loader": "^4.1.0",
        "lint-staged": "^8.1.5",
        "mini-css-extract-plugin": "^0.8.2",
        "mockdate": "^2.0.2",
        "path": "^0.12.7",
        "prettier": "1.14.2",
        "raw-loader": "^0.5.1",
        "react": "^16.13.1",
        "react-docgen-typescript-loader": "^3.7.2",
        "react-dom": "^16.13.1",
        "react-is": "^16.13.1",
        "react-storybook-addon-chapters": "^3.1.7",
        "react-svg-loader": "^2.1.0",
        "react-test-renderer": "^16.5.0",
        "rollup-plugin-postcss": "^3.1.1",
        "style-loader": "^0.23.0",
        "svg-url-loader": "^2.3.2",
        "ts-loader": "^7.0.4",
        "tsdx": "^0.13.2",
        "tslib": "^2.0.0",
        "typescript": "^3.9.2"
    },
    "jest": {
        "setupFilesAfterEnv": [
            "./scripts/jestSetup.ts"
        ],
        "snapshotSerializers": [
            "enzyme-to-json/serializer"
        ],
        "moduleNameMapper": {
            "\\.(css|less)$": "<rootDir>/src/__mocks__/styleMock.ts"
        },
        "testURL": "http://localhost"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged",
            "pre-push": "npm run lint && npm run test"
        }
    },
    "lint-staged": {
        "./**/*.{js,jsx,ts,tsx,json,css,scss,less}": [
            "prettier --write",
            "git add"
        ],
        "*.{js,jsx}": [
            "tsdx lint",
            "git add"
        ]
    },
    "prettier": {
        "printWidth": 80,
        "semi": false,
        "singleQuote": true,
        "trailingComma": "es5",
        "tabWidth": 4
    }
}
